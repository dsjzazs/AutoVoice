<Window x:Class="AutoVoice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoVoice - 自动语音阅读器" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="AutoVoice 自动语音阅读器" 
                   FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- 语音选择 -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Select Voice:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox x:Name="VoiceComboBox" Grid.Row="1" Grid.Column="1" Margin="0,5" 
                  SelectionChanged="VoiceComboBox_SelectionChanged"/>

        <!-- 语速控制 -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Speed:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
            <Slider x:Name="SpeedSlider" Width="200" Minimum="0.1" Maximum="2.0" Value="1.0" 
                    TickFrequency="0.1" IsSnapToTickEnabled="True" 
                    ValueChanged="SpeedSlider_ValueChanged"/>
            <TextBlock x:Name="SpeedTextBlock" Text="1.0x" Margin="10,0,0,0" VerticalAlignment="Center" MinWidth="40"/>
        </StackPanel>

        <!-- 音量控制 -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Volume:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
            <Slider x:Name="VolumeSlider" Width="200" Minimum="0" Maximum="100" Value="100" 
                    TickFrequency="10" IsSnapToTickEnabled="True" 
                    ValueChanged="VolumeSlider_ValueChanged"/>
            <TextBlock x:Name="VolumeTextBlock" Text="100%" Margin="10,0,0,0" VerticalAlignment="Center" MinWidth="40"/>
        </StackPanel>

        <!-- 文本长度限制 -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Max Text Length:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
            <Slider x:Name="MaxTextLengthSlider" Width="200" Minimum="1" Maximum="20" 
                    TickFrequency="1" IsSnapToTickEnabled="True" 
                    ValueChanged="MaxTextLengthSlider_ValueChanged"/>
            <TextBlock x:Name="MaxTextLengthTextBlock" Text="1" Margin="10,0,0,0" VerticalAlignment="Center" MinWidth="40"/>
        </StackPanel>

        <!-- 控制按钮 -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="StartButton" Content="Start Listening" Width="100" Height="30" Margin="10,0" 
                    Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Stop Listening" Width="100" Height="30" Margin="10,0" 
                    Click="StopButton_Click" IsEnabled="False"/>
            <Button x:Name="TestButton" Content="Test Voice" Width="100" Height="30" Margin="10,0" 
                    Click="TestButton_Click"/>
            <Button x:Name="DiagnosticButton" Content="Voice Diagnostic" Width="120" Height="30" Margin="10,0" 
                    Click="DiagnosticButton_Click"/>
        </StackPanel>

        <!-- 状态显示 -->
        <Border Grid.Row="6" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="0,10">
            <ScrollViewer   VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="StatusTextBlock" Text="Ready. Click 'Start Listening' button to begin reading English text from clipboard automatically.&#x0a;Note: If the same content is copied again (Ctrl+C), it will be read at a slower speed (0.5x)." 
                           Margin="10" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- 当前设置显示 -->
        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock Text="Current Settings: " FontWeight="Bold"/>
            <TextBlock x:Name="SettingsTextBlock" Text=""/>
        </StackPanel>
    </Grid>
</Window> 